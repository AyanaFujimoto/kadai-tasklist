<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <p class="mb-0">Task: <%= link_to task.content, task_path(task) %>&gt;Status: <%=task.status %></p>
        </div>
        <div>
          <% if current_user == task.user %>
            <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-success btn-sm' %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>